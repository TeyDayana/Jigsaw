<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jigsaw.GameOverController">
   <Label layoutX="10.0" layoutY="10.0" prefHeight="20.0" prefWidth="300.0" text="Do you want to exit or to start a new game?" textAlignment="CENTER">
      <font>
         <Font size="14.0" />
      </font>
   </Label>

   <Button layoutX="50.0" layoutY="75.0" mnemonicParsing="false" onMouseClicked="#onExitBtnClick" prefHeight="30.0" prefWidth="54.0" text="Exit">
      <font>
         <Font size="14.0" />
      </font>
   </Button>

   <Button layoutX="200.0" layoutY="75.0" mnemonicParsing="false" onMouseClicked="#onNewGameBtnClick" text="New Game">
      <font>
         <Font size="14.0" />
      </font>
   </Button>

   <Label fx:id="time_passed_lbl" layoutX="10.0" layoutY="25.0" prefHeight="20.0" prefWidth="300.0" textAlignment="CENTER">
      <font>
         <Font size="14.0" />
      </font>
   </Label>

   <Label fx:id="moves_amount_lbl" layoutX="10.0" layoutY="40.0" prefHeight="20.0" prefWidth="300.0" textAlignment="CENTER">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
</AnchorPane>
